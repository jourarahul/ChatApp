<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rahul.chatapp.ProfileActivity">
    <ImageView
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:id="@+id/profile_img"
        android:layout_height="220dp"/>
    <TextView
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:id="@+id/profile_name"
        android:textSize="20sp"
        android:layout_below="@+id/profile_img"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_below="@+id/profile_name"
        android:textSize="15sp"
        android:id="@+id/profile_status"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_centerHorizontal="true"
        android:textSize="10sp"
        android:layout_below="@+id/profile_status"
        android:id="@+id/profile_mutual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/profile_send"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/profile_mutual"
        android:text="Send Friend REquest"
        android:backgroundTint="@color/red"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:visibility="gone"
        android:id="@+id/profile_decline"
        android:layout_below="@+id/profile_send"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Decline friend request"
        android:backgroundTint="@color/red"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/profile_display_name"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
